{# templates/panier/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
    <h1>Votre panier</h1>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
        <th>Nom</th>
        <th>Quantite</th>
        <th>Prix</th>
        <th>Total</th>
        </thead>
        <tbody>
        {% for element in dataPanier %}
            <tr id="{{ element.produit.id }}">
                <td id="titre">{{ element.produit.nom }}</td>
                <td>{{ element.quantite }}</td>
                <td>{{ element.produit.prix }}€</td>
                <td>{{ element.produit.prix * element.quantite }}€</td>
                <td>
                    <a class="btn btn-success" href="{{ path('panier_add', {id: element.produit.id}) }}" title="">
                        <i class="bi bi-cart-plus" aria-hidden="true"></i>&nbsp;Ajouter 1
                    </a>
                    <a class="btn btn-warning" href="{{ path('panier_remove', {id: element.produit.id}) }}" title="">
                        <i class="bi bi-cart-plus" aria-hidden="true"></i>&nbsp;Retirer 1
                    </a>
                    <a class="btn btn-danger" href="{{ path('panier_delete', {id: element.produit.id}) }}" title="">
                        <i class="bi bi-cart-plus" aria-hidden="true"></i>&nbsp;Supprimer
                    </a>
                </td>
            </tr>

        {% else %}
            <tr id="">
                <td colspan="3">Votre panier est vide</td>
            </tr>
        {% endfor %}

        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td >{{ total }}€</td>
            </tr>
        </tfoot>
    </table>
    <a class="btn btn-primary btn-sm" href="{{ path('produit') }}" title="Retour">
        <i class="fa fa-edit" aria-hidden="true"></i>&nbsp;Retour
    </a>

{% endblock %}
