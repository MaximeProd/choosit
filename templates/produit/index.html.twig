{# templates/Produit/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}
    Liste des Produits
{% endblock %}
{% block body %}
    <h1>Liste des Produits</h1>
    <table class="table table-striped table-bordered table-condensed">
        <thead width="300">
        <th>Nom</th>
        <th width="120"></th>
        </thead>
        <tbody>
        {% for Produit in arrayProduits %}
            <tr id="{{ Produit.id }}">
                <td id="titre">{{ Produit.nom }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('produit_fiche', { 'id': Produit.id }) }}" title="Voir la fiche">
                        <i class="fa fa-edit" aria-hidden="true"></i>&nbsp;Voir la fiche
                    </a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Aucun Produit n'a été trouvé.</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}